<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:fitFutureChild="true"
    app:fitIgnoreConsume="false"
    app:fitType="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#535455"
        android:orientation="vertical">

        <com.aliya.view.fitsys.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#f00"
            android:fitsSystemWindows="true"
            app:fitIgnoreConsume="true"
            app:fitType="top">

            <com.aliya.view.fitsys.FitWindowsLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0f0"
                android:fitsSystemWindows="true"
                app:fitIgnoreConsume="false" />

        </com.aliya.view.fitsys.FitWindowsLinearLayout>

        <com.aliya.view.fitsys.FitWindowsLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00f"
            android:fitsSystemWindows="true"
            app:fitType="top" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="添加子View" />

    </LinearLayout>

</com.aliya.view.fitsys.FitWindowsLinearLayout>
